<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SilhouetteGOose.View.Welcome.WelcomePage">

    <VerticalStackLayout>

        <Image Source="goose_logo.png" />

        <Label 
            Text="Welcome to"
            FontSize="20"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="Silhouette Go"
            FontSize="24"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Label 
            Text="GOOSE CATCHER"
            FontSize="24"
            FontAttributes="Bold"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button 
            Text="Start new game"
            x:Name="StartNewGameBtn"
            Clicked="StartNewGameBtn_Clicked"
            />


    </VerticalStackLayout>

</ContentPage>
